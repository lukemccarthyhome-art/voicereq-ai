    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
        :root {
            --brand: #4f46e5; --brand-light: #6366f1; --brand-dark: #3730a3;
            --accent: #10b981; --text: #1e293b; --text-mid: #475569; --text-light: #64748b;
            --bg: #ffffff; --bg-alt: #f8fafc; --bg-dark: #0f172a; --border: #e2e8f0;
        }
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; color: var(--text); }
        a { text-decoration: none; color: inherit; }
        html { scroll-behavior: smooth; }

        nav {
            position: fixed; top: 0; width: 100%; z-index: 100;
            display: flex; align-items: center; justify-content: space-between;
            padding: 14px 40px; background: rgba(255,255,255,0.92);
            backdrop-filter: blur(16px); border-bottom: 1px solid rgba(226,232,240,0.6);
            transition: box-shadow 0.3s;
        }
        nav.scrolled { box-shadow: 0 1px 12px rgba(0,0,0,0.06); }
        .nav-brand { font-size: 1.25rem; font-weight: 800; color: var(--brand); }
        .nav-links { display: flex; gap: 28px; align-items: center; }
        .nav-links a.nav-text { font-size: 0.88rem; color: var(--text-mid); transition: color 0.2s; font-weight: 500; }
        .nav-links a.nav-text:hover { color: var(--brand); }
        .nav-links a.active { color: var(--brand); font-weight: 600; }
        .btn-cta { display: inline-block; padding: 10px 28px; border-radius: 8px; font-weight: 600; font-size: 0.92rem; background: var(--accent); color: #fff; box-shadow: 0 2px 8px rgba(16,185,129,0.25); transition: all 0.25s; }
        .btn-cta:hover { background: #059669; transform: translateY(-1px); }

        .about-hero {
            padding: 160px 40px 100px; text-align: center;
            background: linear-gradient(160deg, var(--bg-dark) 0%, #1e1b4b 60%, var(--brand-dark) 100%);
            color: #fff; position: relative; overflow: hidden;
        }
        .about-hero::before {
            content: ''; position: absolute; inset: 0;
            background: radial-gradient(ellipse at 40% 80%, rgba(99,102,241,0.15) 0%, transparent 60%);
        }
        .about-hero > * { position: relative; }
        .about-hero h1 { font-size: 3.2rem; font-weight: 800; margin-bottom: 20px; letter-spacing: -0.03em; }
        .about-hero p { font-size: 1.18rem; max-width: 600px; margin: 0 auto; opacity: 0.82; line-height: 1.75; font-weight: 300; }

        .about-content { max-width: 760px; margin: 0 auto; padding: 80px 40px; }
        .about-content h2 {
            font-size: 1.5rem; font-weight: 700; color: var(--text);
            margin: 56px 0 16px; letter-spacing: -0.01em;
        }
        .about-content h2:first-child { margin-top: 0; }
        .section-divider-left { width: 36px; height: 2px; background: linear-gradient(90deg, var(--brand), var(--accent)); border-radius: 2px; margin-bottom: 20px; }
        .about-content p { font-size: 1.02rem; color: var(--text-mid); line-height: 1.85; margin-bottom: 16px; font-weight: 300; }

        .values-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 20px; margin: 36px 0; }
        .value-card {
            background: var(--bg-alt); border-radius: 14px; padding: 28px 24px;
            border: 1px solid var(--border); transition: all 0.3s;
        }
        .value-card:hover { transform: translateY(-2px); box-shadow: 0 8px 24px rgba(0,0,0,0.05); border-color: rgba(79,70,229,0.2); }
        .value-icon {
            width: 44px; height: 44px; border-radius: 12px; margin-bottom: 12px;
            display: flex; align-items: center; justify-content: center;
            font-size: 1.3rem; background: linear-gradient(135deg, #ede9fe, #e0e7ff);
        }
        .value-card h3 { font-size: 1rem; color: var(--text); margin-bottom: 6px; font-weight: 700; }
        .value-card p { font-size: 0.88rem; color: var(--text-light); line-height: 1.65; margin: 0; font-weight: 300; }

        .founder-section {
            background: var(--bg-alt); border-radius: 16px; padding: 40px 36px;
            margin: 40px 0; border: 1px solid var(--border); transition: all 0.3s;
        }
        .founder-section:hover { box-shadow: 0 8px 28px rgba(0,0,0,0.05); }
        .founder-section h3 { font-size: 1.2rem; font-weight: 700; color: var(--text); margin-bottom: 4px; }
        .founder-section .role { font-size: 0.88rem; color: var(--brand); font-weight: 600; margin-bottom: 14px; }
        .founder-section p { font-size: 0.95rem; color: var(--text-mid); line-height: 1.75; margin-bottom: 10px; font-weight: 300; }

        .cta-bar {
            text-align: center; padding: 80px 40px;
            background: var(--bg-alt); position: relative;
        }
        .cta-bar::before {
            content: ''; position: absolute; top: 0; left: 0; right: 0; height: 1px;
            background: linear-gradient(90deg, transparent, var(--border), transparent);
        }
        .cta-bar h2 { font-size: 1.6rem; color: var(--text); margin-bottom: 12px; font-weight: 700; letter-spacing: -0.01em; }
        .cta-bar p { color: var(--text-light); margin-bottom: 28px; font-weight: 300; }
        .btn-primary { display: inline-block; padding: 14px 36px; border-radius: 10px; font-weight: 600; font-size: 1rem; border: none; cursor: pointer; background: var(--brand); color: #fff; box-shadow: 0 2px 8px rgba(79,70,229,0.3); transition: all 0.25s; }
        .btn-primary:hover { background: var(--brand-light); transform: translateY(-2px); box-shadow: 0 6px 20px rgba(79,70,229,0.3); }
        .btn-ghost { display: inline-block; padding: 14px 36px; border-radius: 10px; font-weight: 600; font-size: 1rem; border: 2px solid var(--brand); color: var(--brand); background: transparent; transition: all 0.25s; }
        .btn-ghost:hover { background: var(--brand); color: #fff; }

        /* Footer */
        .site-footer { background: var(--bg-dark); color: rgba(255,255,255,0.6); padding: 72px 40px 40px; }
        .footer-grid { display: grid; grid-template-columns: 2fr 1fr 1fr 1fr; gap: 48px; max-width: 1000px; margin: 0 auto 48px; }
        .footer-brand { font-size: 1.25rem; font-weight: 800; color: #fff; margin-bottom: 12px; }
        .footer-brand-desc { font-size: 0.88rem; line-height: 1.7; color: rgba(255,255,255,0.45); max-width: 280px; }
        .footer-col h4 { font-size: 0.72rem; text-transform: uppercase; letter-spacing: 0.14em; color: rgba(255,255,255,0.35); font-weight: 700; margin-bottom: 16px; }
        .footer-col a { display: block; font-size: 0.88rem; color: rgba(255,255,255,0.55); padding: 4px 0; transition: color 0.2s; }
        .footer-col a:hover { color: #fff; }
        .footer-bottom { text-align: center; padding-top: 32px; border-top: 1px solid rgba(255,255,255,0.08); font-size: 0.82rem; color: rgba(255,255,255,0.3); max-width: 1000px; margin: 0 auto; }

        /* Fade-in */
        .fade-in { opacity: 0; transform: translateY(24px); transition: opacity 0.6s ease-out, transform 0.6s ease-out; }
        .fade-in.visible { opacity: 1; transform: translateY(0); }
        .fade-in-delay-1 { transition-delay: 0.1s; }
        .fade-in-delay-2 { transition-delay: 0.2s; }

        .hamburger { display: none; background: none; border: none; font-size: 1.5rem; cursor: pointer; padding: 4px 8px; color: var(--brand); }
        @media (max-width: 768px) {
            nav { padding: 12px 20px; }
            .hamburger { display: block; }
            .nav-links { display: none; flex-direction: column; position: absolute; top: 100%; left: 0; right: 0; background: #fff; padding: 16px 20px; gap: 4px; box-shadow: 0 4px 16px rgba(0,0,0,0.1); }
            .nav-links.open { display: flex; }
            .nav-links a.nav-text { padding: 10px 0; font-size: 1rem; }
            .btn-cta { text-align: center; margin-top: 8px; }
            .about-hero { padding: 120px 20px 70px; }
            .about-hero h1 { font-size: 2.2rem; }
            .about-content { padding: 48px 20px; }
            .values-grid { grid-template-columns: 1fr; }
            .footer-grid { grid-template-columns: 1fr 1fr; gap: 32px; }
        }
        @media (max-width: 480px) { .footer-grid { grid-template-columns: 1fr; gap: 24px; } }
    </style>
</head>

    </div>
    <textarea id="featureText" rows="5" placeholder="Describe the feature you'd like to see..." style="width:100%;padding:12px;border:1px solid #ddd;border-radius:8px;font-size:14px;font-family:inherit;resize:vertical;"></textarea>
    <div style="display:flex;justify-content:flex-end;gap:8px;margin-top:12px;">
      <button onclick="document.getElementById('featureModal').style.display='none'" style="padding:10px 20px;border:1px solid #ddd;border-radius:8px;background:white;cursor:pointer;font-size:14px;">Cancel</button>
      <button onclick="submitFeature()" style="padding:10px 20px;border:none;border-radius:8px;background:#667eea;color:white;cursor:pointer;font-weight:600;font-size:14px;">Submit</button>
    </div>
    <div id="featureStatus" style="margin-top:8px;font-size:13px;"></div>
  </div>
</div>
<script>
async function submitFeature(){
  const text=document.getElementById('featureText').value.trim();
  if(!text)return;
  const st=document.getElementById('featureStatus');
  st.innerHTML='Submitting...';st.style.color='#666';
  try{
    const r=await fetch('/api/feature-request',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({text,page:'project'})});
    if(!r.ok)throw new Error('Failed');
    st.innerHTML='‚úÖ Thank you! Your request has been submitted.';st.style.color='#28a745';
    document.getElementById('featureText').value='';
    setTimeout(()=>{document.getElementById('featureModal').style.display='none';st.innerHTML='';},2000);
  }catch(e){st.innerHTML='‚ùå Failed to submit. Please try again.';st.style.color='#dc3545';}
}
</script>

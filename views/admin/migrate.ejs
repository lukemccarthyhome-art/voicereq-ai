<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Migrate from Prod - Morti Projects</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
        :root { --bg-deep: #0a1628; --bg-glass: rgba(15, 29, 50, 0.6); --border-glass: rgba(255, 255, 255, 0.08); --border-glass-hover: rgba(255, 255, 255, 0.15); --accent: #1199fa; --accent-glow: rgba(17, 153, 250, 0.4); --accent-dim: rgba(17, 153, 250, 0.12); --accent-secondary: #009e7e; --text-primary: #f0f4f8; --text-secondary: rgba(240, 244, 248, 0.7); --text-muted: rgba(240, 244, 248, 0.4); --radius: 16px; --radius-pill: 50px; --green: #22c55e; --red: #ef4444; --yellow: #eab308; }
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif; background: var(--bg-deep); color: var(--text-primary); line-height: 1.6; -webkit-font-smoothing: antialiased; }
        a { text-decoration: none; color: inherit; }
        .main { max-width: 900px; margin: 0 auto; padding: 24px; }
        .card { background: var(--bg-glass); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px); border: 1px solid var(--border-glass); border-radius: var(--radius); padding: 24px; margin-bottom: 20px; }
        .btn { display: inline-flex; align-items: center; justify-content: center; padding: 8px 20px; border-radius: var(--radius-pill); font-size: 0.85rem; font-weight: 600; cursor: pointer; transition: all 0.3s; border: none; color: #fff; text-decoration: none; background: var(--accent); box-shadow: 0 0 20px var(--accent-glow); }
        .btn:hover { background: #2aa8ff; transform: translateY(-1px); }
        .btn:disabled { opacity: 0.5; cursor: not-allowed; transform: none; }
        .btn-sm { padding: 6px 14px; font-size: 0.78rem; }
        .btn-green { background: var(--green); box-shadow: 0 0 16px rgba(34,197,94,0.3); }
        .btn-green:hover { background: #16a34a; }
        .btn-secondary { background: rgba(255,255,255,0.1); box-shadow: none; border: 1px solid var(--border-glass); }
        input[type="email"] { background: rgba(255,255,255,0.06); border: 1px solid var(--border-glass); border-radius: var(--radius-pill); padding: 10px 20px; font-size: 0.9rem; color: var(--text-primary); outline: none; font-family: inherit; width: 320px; transition: border 0.2s; }
        input[type="email"]:focus { border-color: var(--accent); }
        .status-msg { padding: 12px 16px; border-radius: 12px; margin-top: 16px; font-size: 0.85rem; }
        .status-msg.success { background: rgba(34,197,94,0.12); border: 1px solid rgba(34,197,94,0.3); color: #86efac; }
        .status-msg.error { background: rgba(239,68,68,0.12); border: 1px solid rgba(239,68,68,0.3); color: #fca5a5; }
        .status-msg.info { background: rgba(17,153,250,0.12); border: 1px solid rgba(17,153,250,0.3); color: #93c5fd; }
        .customer-card { display: flex; align-items: center; gap: 16px; padding: 16px; background: rgba(255,255,255,0.04); border-radius: 12px; margin-top: 16px; }
        .customer-card .avatar { width: 48px; height: 48px; border-radius: 50%; background: var(--accent-dim); display: flex; align-items: center; justify-content: center; font-size: 1.2rem; font-weight: 700; color: var(--accent); flex-shrink: 0; }
        .customer-card .info { flex: 1; }
        .customer-card .info h3 { font-size: 1rem; font-weight: 600; }
        .customer-card .info p { font-size: 0.82rem; color: var(--text-secondary); }
        .project-row { display: flex; align-items: center; justify-content: space-between; padding: 14px 16px; background: rgba(255,255,255,0.03); border-radius: 12px; margin-top: 8px; border: 1px solid var(--border-glass); transition: border-color 0.2s; }
        .project-row:hover { border-color: var(--border-glass-hover); }
        .project-row .pinfo { flex: 1; }
        .project-row .pinfo strong { font-size: 0.92rem; }
        .project-row .pinfo small { color: var(--text-muted); font-size: 0.78rem; }
        .project-row .result { font-size: 0.78rem; color: var(--text-secondary); margin-right: 12px; max-width: 300px; }
        .spinner { display: inline-block; width: 14px; height: 14px; border: 2px solid rgba(255,255,255,0.2); border-top-color: #fff; border-radius: 50%; animation: spin 0.6s linear infinite; margin-right: 6px; vertical-align: middle; }
        @keyframes spin { to { transform: rotate(360deg); } }
        .not-configured { text-align: center; padding: 40px; color: var(--text-muted); }
        .not-configured code { background: rgba(255,255,255,0.08); padding: 2px 8px; border-radius: 6px; font-size: 0.85rem; }
    </style>
</head>
<body>
    <%- include('../partials/admin-nav', { currentPage: 'migrate', user: user }) %>
    <main class="main">
        <div class="card">
            <h2 style="font-size:1.3rem;font-weight:700;margin-bottom:4px;">Migrate from Production</h2>
            <p style="color:var(--text-muted);font-size:0.85rem;margin-bottom:20px;">Pull customers and projects from the production server into this local environment.</p>

            <% if (!configured) { %>
            <div class="not-configured">
                <div style="font-size:48px;margin-bottom:16px;">&#9888;&#65039;</div>
                <h3 style="color:var(--text-secondary);margin-bottom:8px;">Not Configured</h3>
                <p>Set <code>PROD_URL</code> and <code>EXPORT_SECRET</code> in your .env file to enable migration.</p>
            </div>
            <% } else { %>

            <div style="display:flex;gap:10px;align-items:center;">
                <input type="email" id="emailInput" placeholder="customer@example.com" autocomplete="off">
                <button class="btn" id="lookupBtn" onclick="lookupCustomer()">Look Up</button>
            </div>

            <div id="customerSection" style="display:none;">
                <div id="customerCard" class="customer-card"></div>
                <div style="margin-top:12px;">
                    <button class="btn btn-green btn-sm" id="importCustomerBtn" onclick="importCustomer()" style="display:none;">Import Customer</button>
                </div>
                <div id="customerStatus"></div>
            </div>

            <div id="projectsSection" style="display:none;margin-top:24px;">
                <h3 style="font-size:1.05rem;font-weight:600;margin-bottom:8px;">Projects</h3>
                <div id="projectsList"></div>
            </div>

            <% } %>
        </div>
    </main>

<script>
const emailInput = document.getElementById('emailInput');
const lookupBtn = document.getElementById('lookupBtn');
const customerSection = document.getElementById('customerSection');
const customerCard = document.getElementById('customerCard');
const importCustomerBtn = document.getElementById('importCustomerBtn');
const customerStatus = document.getElementById('customerStatus');
const projectsSection = document.getElementById('projectsSection');
const projectsList = document.getElementById('projectsList');

let currentUser = null;

emailInput && emailInput.addEventListener('keydown', e => { if (e.key === 'Enter') lookupCustomer(); });

async function lookupCustomer() {
    const email = emailInput.value.trim();
    if (!email) return;
    lookupBtn.disabled = true;
    lookupBtn.innerHTML = '<span class="spinner"></span>Looking up...';
    customerSection.style.display = 'none';
    projectsSection.style.display = 'none';
    customerStatus.innerHTML = '';
    try {
        const [custRes, projRes] = await Promise.all([
            fetch('/admin/migrate/customer', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ email }) }),
            fetch('/admin/migrate/projects', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ email }) })
        ]);
        const custData = await custRes.json();
        const projData = await projRes.json();
        if (!custRes.ok) throw new Error(custData.error || 'Customer not found');

        currentUser = custData.user;
        const initials = (currentUser.name || currentUser.email).substring(0, 2).toUpperCase();
        customerCard.innerHTML = `
            <div class="avatar">${initials}</div>
            <div class="info">
                <h3>${esc(currentUser.name || 'No name')}</h3>
                <p>${esc(currentUser.email)} &middot; ${esc(currentUser.company || 'No company')} &middot; role: ${esc(currentUser.role)} &middot; id: ${currentUser.id}</p>
            </div>`;
        customerSection.style.display = 'block';
        importCustomerBtn.style.display = '';

        if (projData.ok && projData.projects && projData.projects.length > 0) {
            projectsSection.style.display = 'block';
            projectsList.innerHTML = projData.projects.map(p => `
                <div class="project-row" id="proj-${p.id}">
                    <div class="pinfo">
                        <strong>${esc(p.name)}</strong><br>
                        <small>ID: ${p.id} &middot; Status: ${esc(p.status || 'active')} &middot; ${esc(p.created_at ? new Date(p.created_at).toLocaleDateString() : '')}</small>
                    </div>
                    <span class="result" id="proj-result-${p.id}"></span>
                    <button class="btn btn-sm" onclick="migrateProject(${p.id}, this)">Migrate</button>
                </div>`).join('');
        } else {
            projectsSection.style.display = 'block';
            projectsList.innerHTML = '<p style="color:var(--text-muted);font-size:0.85rem;padding:12px;">No projects found on production.</p>';
        }
    } catch (e) {
        customerSection.style.display = 'block';
        customerCard.innerHTML = '';
        importCustomerBtn.style.display = 'none';
        customerStatus.innerHTML = `<div class="status-msg error">${esc(e.message)}</div>`;
    }
    lookupBtn.disabled = false;
    lookupBtn.textContent = 'Look Up';
}

async function importCustomer() {
    if (!currentUser) return;
    importCustomerBtn.disabled = true;
    importCustomerBtn.innerHTML = '<span class="spinner"></span>Importing...';
    try {
        const res = await fetch('/admin/migrate/customer/import', {
            method: 'POST', headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email: currentUser.email })
        });
        const data = await res.json();
        if (!res.ok) throw new Error(data.error || 'Import failed');
        const cls = data.alreadyExisted ? 'info' : 'success';
        customerStatus.innerHTML = `<div class="status-msg ${cls}">${esc(data.message)}</div>`;
        importCustomerBtn.style.display = 'none';
    } catch (e) {
        customerStatus.innerHTML = `<div class="status-msg error">${esc(e.message)}</div>`;
    }
    importCustomerBtn.disabled = false;
    importCustomerBtn.textContent = 'Import Customer';
}

async function migrateProject(projectId, btn) {
    btn.disabled = true;
    btn.innerHTML = '<span class="spinner"></span>Migrating...';
    const resultEl = document.getElementById('proj-result-' + projectId);
    try {
        const res = await fetch('/admin/migrate/project', {
            method: 'POST', headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ projectId })
        });
        const data = await res.json();
        if (!res.ok) throw new Error(data.error || 'Import failed');
        const s = data.summary;
        const parts = [];
        if (s.sessions) parts.push(s.sessions + ' sessions');
        if (s.files) parts.push(s.files + ' files');
        if (s.designs) parts.push(s.designs + ' designs');
        if (s.proposals) parts.push(s.proposals + ' proposals');
        if (s.shares) parts.push(s.shares + ' shares');
        resultEl.innerHTML = '<span style="color:var(--green);">&#10003; ' + (parts.length ? parts.join(', ') : 'Done (all existed)') + '</span>';
        btn.textContent = 'Done';
        btn.style.background = 'var(--green)';
        btn.style.boxShadow = '0 0 16px rgba(34,197,94,0.3)';
    } catch (e) {
        resultEl.innerHTML = '<span style="color:var(--red);">' + esc(e.message) + '</span>';
        btn.textContent = 'Retry';
        btn.disabled = false;
    }
}

function esc(s) {
    if (!s) return '';
    const d = document.createElement('div');
    d.textContent = String(s);
    return d.innerHTML;
}
</script>
</body>
</html>

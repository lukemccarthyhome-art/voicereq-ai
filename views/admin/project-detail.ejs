async function adminRemoveShare(shareId) {
    if (!confirm('Remove this collaborator?')) return;
    try {
        await fetch('/admin/projects/' + adminProjectId + '/share/' + shareId, { method: 'DELETE' });
        adminLoadShares();
    } catch(e) { alert('Failed: ' + e.message); }
}


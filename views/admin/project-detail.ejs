                </div>
            </div>
        `).join('');
    } catch(e) { el.innerHTML = '<div style="color:#ef4444;font-size:13px;">Failed to load shares</div>'; }
}

async function adminInviteShare() {
    const email = document.getElementById('adminShareEmail').value.trim();
    const permission = document.getElementById('adminSharePermission').value;
    const status = document.getElementById('adminShareStatus');
    if (!email) return;
    status.style.display = 'block'; status.innerHTML = 'Sending invite...'; status.style.color = 'rgba(240,244,248,0.7)';
    try {
        const res = await fetch('/admin/projects/' + adminProjectId + '/share', {
            method: 'POST', headers: {'Content-Type':'application/json'},
            body: JSON.stringify({ email, permission })
        });
        const data = await res.json();
        if (!res.ok) throw new Error(data.error);
        let msg = 'âœ… Invited ' + email;
        if (data.signupLink) msg += '<br><span style="font-size:12px;color:rgba(240,244,248,0.4);">Signup link: <a href="' + data.signupLink + '" style="word-break:break-all;color:#1199fa;">' + data.signupLink + '</a></span>';
        status.innerHTML = msg; status.style.color = '#009e7e';
        document.getElementById('adminShareEmail').value = '';
        adminLoadShares();
    } catch(e) { status.innerHTML = 'âŒ ' + e.message; status.style.color = '#ef4444'; }
}

async function adminUpdatePermission(shareId, permission) {
    try {
        await fetch('/admin/projects/' + adminProjectId + '/share/' + shareId, {
            method: 'PUT', headers: {'Content-Type':'application/json'},
            body: JSON.stringify({ permission })

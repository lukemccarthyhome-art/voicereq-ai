<% 
const title = project.name + ' - Project Detail';
const currentPage = 'admin-projects';
const breadcrumbs = [
    { name: 'Dashboard', url: '/admin' },
    { name: 'Projects', url: '/admin/projects' },
    { name: project.name }
];
%>

<div style="display: grid; grid-template-columns: 2fr 1fr; gap: 20px; margin-bottom: 20px;">
    <div class="card">
        <div style="display: flex; justify-content: between; align-items: flex-start; margin-bottom: 16px;">
            <div>
                <h2>üìã <%= project.name %></h2>
                <p style="color: #666; margin-top: 8px;"><%= project.description || 'No description provided' %></p>
            </div>
            <div style="margin-left: auto;">
                <% if (project.status === 'active') { %>
                    <span style="background: #d4edda; color: #155724; padding: 4px 12px; border-radius: 12px; font-size: 12px; font-weight: 600;">‚óè Active</span>
                <% } else if (project.status === 'completed') { %>
                    <span style="background: #d1ecf1; color: #0c5460; padding: 4px 12px; border-radius: 12px; font-size: 12px; font-weight: 600;">‚óè Completed</span>
                <% } else { %>
                    <span style="background: #f8d7da; color: #721c24; padding: 4px 12px; border-radius: 12px; font-size: 12px; font-weight: 600;">‚óè Archived</span>
                <% } %>
            </div>
        </div>
        
        <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 16px; padding: 16px; background: #f8f9ff; border-radius: 8px;">
            <div style="text-align: center;">
                <div style="font-size: 24px; font-weight: bold; color: #667eea;"><%= sessions.length %></div>
                <div style="font-size: 12px; color: #666; text-transform: uppercase;">Sessions</div>
            </div>
            <div style="text-align: center;">
                <div style="font-size: 24px; font-weight: bold; color: #667eea;"><%= files.length %></div>
                <div style="font-size: 12px; color: #666; text-transform: uppercase;">Files</div>
            </div>
            <div style="text-align: center;">
                <div style="font-size: 24px; font-weight: bold; color: #667eea;">
                    <% 
                    const totalReqs = sessions.reduce((acc, session) => {
                        try {
                            const reqs = JSON.parse(session.requirements || '{}');
                            return acc + Object.values(reqs).reduce((sum, arr) => sum + (Array.isArray(arr) ? arr.length : 0), 0);
                        } catch {
                            return acc;
                        }
                    }, 0);
                    %>
                    <%= totalReqs %>
                </div>
                <div style="font-size: 12px; color: #666; text-transform: uppercase;">Requirements</div>
            </div>
        </div>
    </div>

    <div class="card">
        <h3>üë§ Customer</h3>
        <div style="margin-top: 12px;">
            <strong><%= project.user_name %></strong><br>
            <span style="color: #666;"><%= project.email %></span><br>
            <span style="color: #888; font-size: 14px;">üè¢ <%= project.company %></span>
        </div>
        
        <div style="margin-top: 16px; padding-top: 16px; border-top: 1px solid #e0e0e0;">
            <div style="font-size: 12px; color: #666; margin-bottom: 4px;">CREATED</div>
            <div style="font-size: 14px;"><%= new Date(project.created_at).toLocaleDateString() %></div>
        </div>
        
        <div style="margin-top: 12px;">
            <div style="font-size: 12px; color: #666; margin-bottom: 4px;">LAST UPDATED</div>
            <div style="font-size: 14px;"><%= new Date(project.updated_at).toLocaleDateString() %></div>
        </div>

        <div style="margin-top: 20px;">
            <button onclick="exportProject()" class="btn btn-sm" style="width: 100%;">üì¶ Export Project</button>
        </div>
    </div>
</div>

<div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
    <div class="card">
        <h3>üí¨ Voice Sessions</h3>
        <% if (sessions.length > 0) { %>
            <div style="max-height: 400px; overflow-y: auto;">
                <% sessions.forEach(session => { %>
                    <div style="border: 1px solid #e0e0e0; border-radius: 8px; padding: 12px; margin-bottom: 12px; background: #fafafa;">
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
                            <strong>Session #<%= session.id %></strong>
                            <% if (session.status === 'active') { %>
                                <span style="color: #28a745; font-size: 12px;">‚óè Active</span>
                            <% } else if (session.status === 'completed') { %>
                                <span style="color: #6c757d; font-size: 12px;">‚óè Completed</span>
                            <% } else { %>
                                <span style="color: #dc3545; font-size: 12px;">‚óè Paused</span>
                            <% } %>
                        </div>
                        <div style="font-size: 12px; color: #666; margin-bottom: 8px;">
                            <%= new Date(session.created_at).toLocaleString() %>
                        </div>
                        
                        <% 
                        let transcript = [];
                        let requirements = {};
                        try {
                            transcript = JSON.parse(session.transcript || '[]');
                            requirements = JSON.parse(session.requirements || '{}');
                        } catch {}
                        %>
                        
                        <div style="font-size: 13px; margin-bottom: 8px;">
                            üìù <%= transcript.length %> messages | 
                            ‚úÖ <%= Object.values(requirements).reduce((sum, arr) => sum + (Array.isArray(arr) ? arr.length : 0), 0) %> requirements
                        </div>
                        
                        <button onclick="viewSession(<%= session.id %>)" class="btn btn-sm" style="font-size: 11px;">üëÅÔ∏è View Details</button>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-state" style="padding: 40px 20px;">
                <span class="emoji">üí¨</span>
                <h4>No sessions yet</h4>
                <p>Voice sessions will appear here</p>
            </div>
        <% } %>
    </div>

    <div class="card">
        <h3>üìé Project Files</h3>
        <% if (files.length > 0) { %>
            <div style="max-height: 400px; overflow-y: auto;">
                <% files.forEach(file => { %>
                    <div style="border: 1px solid #e0e0e0; border-radius: 8px; padding: 12px; margin-bottom: 12px; background: #fafafa;">
                        <div style="font-weight: 600; margin-bottom: 4px;">
                            üìÑ <%= file.original_name %>
                        </div>
                        <div style="font-size: 12px; color: #666; margin-bottom: 8px;">
                            <%= (file.size / 1024).toFixed(1) %> KB ‚Ä¢ <%= new Date(file.created_at).toLocaleDateString() %>
                        </div>
                        
                        <% if (file.analysis) { %>
                            <% 
                            let analysis = {};
                            try {
                                analysis = JSON.parse(file.analysis);
                            } catch {}
                            %>
                            <% if (analysis.requirements && analysis.requirements.length > 0) { %>
                                <div style="font-size: 12px; color: #28a745; margin-bottom: 8px;">
                                    ‚úÖ <%= analysis.requirements.length %> requirements extracted
                                </div>
                            <% } %>
                        <% } %>
                        
                        <button onclick="viewFile('<%= file.filename %>')" class="btn btn-sm" style="font-size: 11px;">üëÅÔ∏è View</button>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-state" style="padding: 40px 20px;">
                <span class="emoji">üìé</span>
                <h4>No files uploaded</h4>
                <p>Project files will appear here</p>
            </div>
        <% } %>
    </div>
</div>

<!-- Session Detail Modal -->
<div id="sessionModal" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.8); z-index: 1000;">
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); background: white; padding: 24px; border-radius: 12px; width: 90%; max-width: 800px; max-height: 80vh; overflow-y: auto;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
            <h3 id="sessionModalTitle">Session Details</h3>
            <button onclick="closeSessionModal()" style="background: none; border: none; font-size: 24px; cursor: pointer;">&times;</button>
        </div>
        <div id="sessionModalContent"></div>
    </div>
</div>

<script>
function viewSession(sessionId) {
    const session = <%= JSON.stringify(sessions) %>.find(s => s.id === sessionId);
    if (!session) return;
    
    let transcript = [];
    let requirements = {};
    try {
        transcript = JSON.parse(session.transcript || '[]');
        requirements = JSON.parse(session.requirements || '{}');
    } catch {}
    
    document.getElementById('sessionModalTitle').innerText = `Session #${sessionId}`;
    
    let content = `
        <div style="margin-bottom: 20px;">
            <strong>Status:</strong> ${session.status} | 
            <strong>Created:</strong> ${new Date(session.created_at).toLocaleString()} |
            <strong>Updated:</strong> ${new Date(session.updated_at).toLocaleString()}
        </div>
    `;
    
    // Requirements
    if (Object.keys(requirements).length > 0) {
        content += '<h4>üìã Requirements Identified</h4>';
        for (const [category, items] of Object.entries(requirements)) {
            if (Array.isArray(items) && items.length > 0) {
                content += `<h5>${category}</h5><ul>`;
                items.forEach(item => {
                    content += `<li>${item}</li>`;
                });
                content += '</ul>';
            }
        }
    }
    
    // Transcript
    if (transcript.length > 0) {
        content += '<h4 style="margin-top: 20px;">üí¨ Full Transcript</h4>';
        content += '<div style="max-height: 300px; overflow-y: auto; border: 1px solid #e0e0e0; border-radius: 8px; padding: 12px;">';
        transcript.forEach(msg => {
            const isAI = msg.role === 'ai';
            content += `
                <div style="margin-bottom: 12px; padding: 8px; border-radius: 8px; ${isAI ? 'background: #f0f2ff;' : 'background: #f8f8f8;'}">
                    <div style="font-weight: 600; font-size: 12px; margin-bottom: 4px; color: ${isAI ? '#667eea' : '#333'};">${isAI ? 'ü§ñ AI' : 'üë§ User'}</div>
                    <div>${msg.text}</div>
                </div>
            `;
        });
        content += '</div>';
    }
    
    document.getElementById('sessionModalContent').innerHTML = content;
    document.getElementById('sessionModal').style.display = 'block';
}

function closeSessionModal() {
    document.getElementById('sessionModal').style.display = 'none';
}

function viewFile(filename) {
    window.open('/uploads/' + filename, '_blank');
}

async function exportProject() {
    try {
        // Build requirements document
        const sessions = <%= JSON.stringify(sessions) %>;
        let allRequirements = {};
        let allTranscript = [];
        
        sessions.forEach(session => {
            try {
                const transcript = JSON.parse(session.transcript || '[]');
                const requirements = JSON.parse(session.requirements || '{}');
                
                allTranscript = allTranscript.concat(transcript);
                
                for (const [category, items] of Object.entries(requirements)) {
                    if (!allRequirements[category]) allRequirements[category] = [];
                    if (Array.isArray(items)) {
                        allRequirements[category] = allRequirements[category].concat(items);
                    }
                }
            } catch {}
        });
        
        // Build markdown document
        let doc = '# <%= project.name %> - Requirements Document\\n\\n';
        doc += '**Company:** <%= project.company %>\\n';
        doc += '**Contact:** <%= project.user_name %> (<%= project.email %>)\\n';
        doc += '**Generated:** ' + new Date().toLocaleString() + '\\n\\n';
        
        if (Object.keys(allRequirements).length > 0) {
            doc += '## Requirements\\n\\n';
            const order = ['Project Overview', 'Stakeholders', 'Functional Requirements', 'Non-Functional Requirements', 'Constraints', 'Success Criteria'];
            const seen = new Set();
            
            for (const cat of [...order, ...Object.keys(allRequirements)]) {
                if (seen.has(cat) || !allRequirements[cat] || allRequirements[cat].length === 0) continue;
                seen.add(cat);
                doc += '### ' + cat + '\\n\\n';
                allRequirements[cat].forEach(r => doc += '- ' + r + '\\n');
                doc += '\\n';
            }
        }
        
        const files = <%= JSON.stringify(files) %>;
        if (files.length > 0) {
            doc += '## Project Assets\\n\\n';
            files.forEach(f => doc += '- ' + f.original_name + ' (' + (f.size/1024).toFixed(1) + ' KB)\\n');
            doc += '\\n';
        }
        
        if (allTranscript.length > 0) {
            doc += '## Full Conversation History\\n\\n';
            allTranscript.forEach(m => {
                doc += '**' + (m.role === 'ai' ? 'AI' : 'User') + ':** ' + m.text + '\\n\\n';
            });
        }
        
        doc += '---\\n*Generated by VoiceReq AI*\\n';
        
        // Export as zip
        const response = await fetch('/api/export-zip', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ requirementsDoc: doc })
        });
        
        if (!response.ok) throw new Error('Export failed');
        
        const blob = await response.blob();
        const a = document.createElement('a');
        a.href = URL.createObjectURL(blob);
        a.download = '<%= project.name.replace(/[^a-z0-9]/gi, '-') %>-export-' + new Date().toISOString().split('T')[0] + '.zip';
        a.click();
    } catch (e) {
        alert('Export failed: ' + e.message);
    }
}

// Close modal when clicking outside
document.addEventListener('click', function(e) {
    const modal = document.getElementById('sessionModal');
    if (e.target === modal) {
        closeSessionModal();
    }
});
</script>
<script>
function viewSession(sessionId) {
    const session = <%- JSON.stringify(sessions) %>.find(s => s.id === sessionId);
    if (!session) return;
    
    let transcript = [];
    let requirements = {};
    try {
        transcript = JSON.parse(session.transcript || '[]');
        requirements = JSON.parse(session.requirements || '{}');
    } catch {}
    
    document.getElementById('sessionModalTitle').innerText = `Session #${sessionId}`;
    
    let content = `
        <div style="margin-bottom: 20px; color: rgba(240,244,248,0.7);">
            <strong>Status:</strong> ${session.status} | 
            <strong>Created:</strong> ${new Date(session.created_at).toLocaleString('en-AU', { timeZone: 'Australia/Melbourne' })} |
            <strong>Updated:</strong> ${new Date(session.updated_at).toLocaleString('en-AU', { timeZone: 'Australia/Melbourne' })}
        </div>
    `;
    
    if (Object.keys(requirements).length > 0) {
        content += '<h4 style="color:#1199fa;margin-bottom:8px;">ğŸ“‹ Requirements Identified</h4>';
        for (const [category, items] of Object.entries(requirements)) {
            if (Array.isArray(items) && items.length > 0) {
                content += `<h5 style="color:rgba(240,244,248,0.7);margin:8px 0 4px;">${category}</h5><ul style="margin-left:16px;color:rgba(240,244,248,0.7);">`;
                items.forEach(item => { content += `<li>${item}</li>`; });
                content += '</ul>';
            }
        }
    }
    
    if (transcript.length > 0) {
        content += '<h4 style="margin-top: 20px;color:#1199fa;">ğŸ’¬ Full Transcript</h4>';
        content += '<div style="max-height: 300px; overflow-y: auto; border: 1px solid rgba(255,255,255,0.08); border-radius: 12px; padding: 12px;">';
        transcript.forEach(msg => {
            const isAI = msg.role === 'ai';
            content += `
                <div style="margin-bottom: 12px; padding: 8px; border-radius: 8px; ${isAI ? 'background: rgba(17,153,250,0.08);' : 'background: rgba(255,255,255,0.04);'}">
                    <div style="font-weight: 600; font-size: 12px; margin-bottom: 4px; color: ${isAI ? '#1199fa' : 'rgba(240,244,248,0.7)'};">${isAI ? 'ğŸ¤– AI' : 'ğŸ‘¤ User'}</div>
                    <div style="color:rgba(240,244,248,0.9);">${msg.text}</div>
                </div>
            `;
        });
        content += '</div>';
    }
    
    document.getElementById('sessionModalContent').innerHTML = content;
    document.getElementById('sessionModal').style.display = 'block';
}

function closeSessionModal() {
    document.getElementById('sessionModal').style.display = 'none';
}

function viewFile(filename) {
    window.open('/uploads/' + filename, '_blank');
}

async function deleteFile(fileId, btn) {
    if (!confirm('Delete this file? This cannot be undone.')) return;
    try {
        const res = await fetch('/api/files/' + fileId, { method: 'DELETE' });
        if (res.ok) {
            btn.closest('div').remove();
        } else {
            alert('Failed to delete file');
        }
    } catch (e) {
        alert('Error: ' + e.message);
    }
}

async function exportProject() {
    try {
        const sessions = <%- JSON.stringify(sessions) %>;
        let allRequirements = {};
        let allTranscript = [];
        
        sessions.forEach(session => {
            try {
                const transcript = JSON.parse(session.transcript || '[]');
                const requirements = JSON.parse(session.requirements || '{}');
                allTranscript = allTranscript.concat(transcript);
                for (const [category, items] of Object.entries(requirements)) {
                    if (!allRequirements[category]) allRequirements[category] = [];
                    if (Array.isArray(items)) {
                        allRequirements[category] = allRequirements[category].concat(items);
                    }
                }
            } catch {}
        });
        
        let doc = '# <%= project.name %> - Requirements Document\\n\\n';
        doc += '**Company:** <%= project.company %>\\n';
        doc += '**Contact:** <%= project.user_name %> (<%= project.email %>)\\n';
        doc += '**Generated:** ' + new Date().toLocaleString('en-AU', { timeZone: 'Australia/Melbourne' }) + '\\n\\n';
        
        if (Object.keys(allRequirements).length > 0) {
            doc += '## Requirements\\n\\n';
            const order = ['Project Overview', 'Stakeholders', 'Functional Requirements', 'Non-Functional Requirements', 'Constraints', 'Success Criteria'];
            const seen = new Set();
            for (const cat of [...order, ...Object.keys(allRequirements)]) {
                if (seen.has(cat) || !allRequirements[cat] || allRequirements[cat].length === 0) continue;
                seen.add(cat);
                doc += '### ' + cat + '\\n\\n';
                allRequirements[cat].forEach(r => doc += '- ' + r + '\\n');
                doc += '\\n';
            }
        }
        
        const files = <%- JSON.stringify(files) %>;
        if (files.length > 0) {
            doc += '## Project Assets\\n\\n';
            files.forEach(f => doc += '- ' + f.original_name + ' (' + (f.size/1024).toFixed(1) + ' KB)\\n');
            doc += '\\n';
        }
        
        if (allTranscript.length > 0) {
            doc += '## Full Conversation History\\n\\n';
            allTranscript.forEach(m => {
                doc += '**' + (m.role === 'ai' ? 'AI' : 'User') + ':** ' + m.text + '\\n\\n';
            });
        }
        
        doc += '---\\n*Generated by Morti Projects*\\n';
        
        const response = await fetch('/api/export-zip', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ requirementsDoc: doc })
        });
        
        if (!response.ok) throw new Error('Export failed');
        
        const blob = await response.blob();
        const a = document.createElement('a');
        a.href = URL.createObjectURL(blob);
        a.download = '<%= project.name.replace(/[^a-z0-9]/gi, '-') %>-export-' + new Date().toISOString().split('T')[0] + '.zip';
        a.click();
    } catch (e) {
        alert('Export failed: ' + e.message);
    }
}


            <a href="/admin/customers"<%= currentPage === 'customers' ? ' class="active"' : '' %>>Customers</a>
            <a href="/admin/projects"<%= currentPage === 'projects' ? ' class="active"' : '' %>>Projects</a>
            <a href="/admin/billing"<%= currentPage === 'billing' ? ' class="active"' : '' %>>Billing</a>
            <a href="/admin/feature-requests"<%= currentPage === 'feature-requests' ? ' class="active"' : '' %>>Feature Requests</a>
            <div class="user-dropdown">
                <span class="user-name">ðŸ‘¤ <%= user.name %> â–¾</span>
                <div class="user-dropdown-menu">
                    <a href="/admin">Dashboard</a>
                    <a href="/profile">Profile</a>
                    <a href="/logout">Logout</a>
                </div>
            </div>
        </nav>
    </div>
</div>

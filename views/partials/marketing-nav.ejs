<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
<style>
    /* Nav - Dark Glass */
    nav {
        position: fixed; top: 0; width: 100%; z-index: 100;
        display: flex; align-items: center; justify-content: space-between;
        padding: 14px 40px;
        background: rgba(10, 22, 40, 0.85);
        backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        transition: box-shadow 0.3s;
    }
    nav.scrolled { box-shadow: 0 2px 24px rgba(0,0,0,0.3); }
    .nav-brand { font-size: 1.25rem; font-weight: 800; color: #f0f4f8; letter-spacing: -0.02em; text-decoration: none; }
    .nav-links { display: flex; gap: 8px; align-items: center; }
    .nav-links a.nav-text { font-size: 0.88rem; color: rgba(240, 244, 248, 0.6); transition: all 0.2s; font-weight: 500; padding: 8px 14px; border-radius: 50px; text-decoration: none; }
    .nav-links a.nav-text:hover { color: #f0f4f8; background: rgba(255,255,255,0.05); }
    .nav-links a.nav-text.active { color: #1199fa; background: rgba(17, 153, 250, 0.12); font-weight: 600; }
    .btn { display: inline-block; padding: 10px 24px; border-radius: 50px; font-weight: 600; font-size: 0.9rem; transition: all 0.3s; cursor: pointer; border: none; text-decoration: none; }
    .btn-cta { background: #1199fa; color: #fff; box-shadow: 0 0 20px rgba(17, 153, 250, 0.4); padding: 10px 28px; font-size: 0.92rem; }
    .btn-cta:hover { background: #2aa8ff; transform: translateY(-2px); box-shadow: 0 0 32px rgba(17, 153, 250, 0.5); }
    .hamburger { display: none; background: none; border: none; font-size: 1.5rem; cursor: pointer; padding: 4px 8px; color: #f0f4f8; }
    @media (max-width: 768px) {
        nav { padding: 12px 20px; }
        .hamburger { display: block; }
        .nav-links { display: none; flex-direction: column; position: absolute; top: 100%; left: 0; right: 0; background: rgba(10, 22, 40, 0.95); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px); padding: 16px 20px; gap: 4px; box-shadow: 0 8px 32px rgba(0,0,0,0.4); border-top: 1px solid rgba(255,255,255,0.08); }
        .nav-links.open { display: flex; }
        .nav-links a.nav-text { padding: 10px 0; font-size: 1rem; }
        .btn-cta { text-align: center; margin-top: 8px; }
    }
</style>

<nav>
    <a href="/" class="nav-brand">◆ Morti</a>
    <button class="hamburger" onclick="this.nextElementSibling.classList.toggle('open')" aria-label="Menu">☰</button>
    <div class="nav-links">
        <a href="/#products" class="nav-text<%= typeof currentPage !== 'undefined' && currentPage === 'products' ? ' active' : '' %>">What We Do</a>
        <a href="/about" class="nav-text<%= typeof currentPage !== 'undefined' && currentPage === 'about' ? ' active' : '' %>">About</a>
        <a href="/#pricing" class="nav-text<%= typeof currentPage !== 'undefined' && currentPage === 'pricing' ? ' active' : '' %>">Pricing</a>
        <a href="/contact" class="nav-text<%= typeof currentPage !== 'undefined' && currentPage === 'contact' ? ' active' : '' %>">Contact</a>
        <a href="/login" class="nav-text<%= typeof currentPage !== 'undefined' && currentPage === 'login' ? ' active' : '' %>">Login</a>
        <a href="/signup" class="btn btn-cta">Get Started</a>
    </div>
</nav>

<script>
// Nav shadow on scroll
window.addEventListener('scroll', function() {
    var nav = document.querySelector('nav');
    if (nav) nav.classList.toggle('scrolled', window.scrollY > 20);
});
</script>
<script>
// Scroll fade-in
const observer = new IntersectionObserver((entries) => {
    entries.forEach(e => { if (e.isIntersecting) { e.target.classList.add('visible'); } });
}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
document.querySelectorAll('.fade-in').forEach(el => observer.observe(el));

// Nav shadow + back to top
const btt = document.querySelector('.back-to-top');
window.addEventListener('scroll', () => {
    const nav = document.querySelector('nav');
    if (nav) nav.classList.toggle('scrolled', window.scrollY > 20);
    btt.classList.toggle('show', window.scrollY > 600);
});

// Hero video play overlay
function playHeroVideo() {
    const vid = document.getElementById('hero-vid');
    const overlay = document.getElementById('play-overlay');
    vid.controls = true;
    vid.play();
    overlay.classList.add('hidden');
}
document.getElementById('hero-vid').addEventListener('pause', () => {
    document.getElementById('play-overlay').classList.remove('hidden');
});
document.getElementById('hero-vid').addEventListener('play', () => {
    document.getElementById('play-overlay').classList.add('hidden');
});
</script>


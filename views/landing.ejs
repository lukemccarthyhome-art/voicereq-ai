    <style>
        :root {
            --brand: #4f46e5;
            --brand-light: #6366f1;
            --brand-dark: #3730a3;
            --accent: #10b981;
            --accent-dark: #059669;
            --text: #1e293b;
            --text-mid: #475569;
            --text-light: #64748b;
            --bg: #ffffff;
            --bg-alt: #f8fafc;
            --bg-dark: #0f172a;
            --border: #e2e8f0;
            --radius: 12px;
            --shadow-sm: 0 1px 3px rgba(0,0,0,0.06);
            --shadow-md: 0 4px 16px rgba(0,0,0,0.08);
            --shadow-lg: 0 8px 32px rgba(0,0,0,0.12);
        }
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; color: var(--text); overflow-x: hidden; font-weight: 400; }
        a { text-decoration: none; color: inherit; }
        html { scroll-behavior: smooth; }

        /* Buttons */
        .btn {
            display: inline-flex; align-items: center; justify-content: center;
            padding: 14px 32px; border-radius: 10px; font-size: 1rem;
            font-weight: 600; cursor: pointer; transition: all 0.25s cubic-bezier(0.4,0,0.2,1);
            border: none; letter-spacing: -0.01em;
        }
        .btn-primary { background: var(--brand); color: #fff; box-shadow: 0 2px 8px rgba(79,70,229,0.3); }
        .btn-primary:hover { background: var(--brand-light); transform: translateY(-1px); box-shadow: 0 6px 20px rgba(79,70,229,0.35); }
        .btn-white { background: #fff; color: var(--brand); box-shadow: 0 2px 12px rgba(0,0,0,0.12); font-weight: 700; }
        .btn-white:hover { transform: translateY(-2px); box-shadow: 0 6px 24px rgba(0,0,0,0.18); }
        .btn-outline-white { border: 2px solid rgba(255,255,255,0.4); color: #fff; background: rgba(255,255,255,0.06); backdrop-filter: blur(4px); }
        .btn-outline-white:hover { background: #fff; color: var(--brand); border-color: #fff; }
        .btn-ghost { background: transparent; border: 2px solid var(--brand); color: var(--brand); }
        .btn-ghost:hover { background: var(--brand); color: #fff; }
        .btn-lg { padding: 18px 40px; font-size: 1.1rem; border-radius: 12px; }

        /* Container */
        .container { max-width: 1200px; margin: 0 auto; padding: 0 24px; }

        /* Fade-in on scroll */
        .fade-in {
            opacity: 0; transform: translateY(28px);
            transition: opacity 0.7s ease-out, transform 0.7s ease-out;
        }
        .fade-in.visible { opacity: 1; transform: translateY(0); }
        .fade-in-delay-1 { transition-delay: 0.12s; }
        .fade-in-delay-2 { transition-delay: 0.24s; }
        .fade-in-delay-3 { transition-delay: 0.36s; }

        /* ========== HERO ========== */
        .hero {
            min-height: 100vh; display: flex; align-items: center; justify-content: center;
            background: linear-gradient(160deg, var(--bg-dark) 0%, #1e1b4b 50%, var(--brand-dark) 100%);
            padding: 140px 24px 100px; text-align: center; color: #fff;
            position: relative; overflow: hidden;
        }
        .hero::before {
            content: ''; position: absolute; inset: 0;
            background: radial-gradient(ellipse at 30% 80%, rgba(99,102,241,0.18) 0%, transparent 60%),
                        radial-gradient(ellipse at 70% 20%, rgba(16,185,129,0.12) 0%, transparent 50%);
        }
        .hero-grid {
            position: absolute; inset: 0; opacity: 0.06;
            background-image:
                linear-gradient(rgba(255,255,255,0.4) 1px, transparent 1px),
                linear-gradient(90deg, rgba(255,255,255,0.4) 1px, transparent 1px);
            background-size: 60px 60px;
            animation: gridDrift 20s linear infinite;
        }
        @keyframes gridDrift { 0% { transform: translate(0,0); } 100% { transform: translate(60px,60px); } }
        .hero-orb { position: absolute; border-radius: 50%; filter: blur(80px); pointer-events: none; animation: orbFloat 12s ease-in-out infinite; }
        .hero-orb-1 { width: 400px; height: 400px; background: rgba(99,102,241,0.2); top: 10%; left: -5%; }
        .hero-orb-2 { width: 300px; height: 300px; background: rgba(16,185,129,0.15); bottom: 10%; right: -5%; animation-delay: -4s; }
        .hero-orb-3 { width: 200px; height: 200px; background: rgba(168,85,247,0.12); top: 50%; left: 60%; animation-delay: -8s; }
        @keyframes orbFloat {
            0%, 100% { transform: translate(0,0) scale(1); }
            33% { transform: translate(30px,-20px) scale(1.05); }
            66% { transform: translate(-20px,15px) scale(0.95); }
        }
        .hero-inner { position: relative; z-index: 1; max-width: 900px; }
        .hero h1 {
            font-size: clamp(2.8rem, 6vw, 5rem); font-weight: 900; margin-bottom: 24px;
            line-height: 1.05; letter-spacing: -0.04em;
            animation: fadeUp 0.7s ease-out;
        }
        .hero h1 .gradient-text {
            background: linear-gradient(135deg, #a5b4fc, #6ee7b7);
            -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;
        }
        .hero .hero-sub {
            font-size: clamp(1.05rem, 2vw, 1.3rem); max-width: 640px; margin: 0 auto 48px;
            opacity: 0.82; line-height: 1.7; font-weight: 300;
            animation: fadeUp 0.7s ease-out 0.12s both;
        }

        /* Hero Video Placeholder */
        .hero-video-wrap {
            max-width: 800px; margin: 0 auto 48px; animation: fadeUp 0.7s ease-out 0.2s both;
        }
        .hero-video {
            width: 100%; border-radius: 16px; overflow: hidden;
            border: 1px solid rgba(255,255,255,0.1);
            box-shadow: 0 8px 40px rgba(0,0,0,0.4);
            display: block;
        }

        .hero-buttons { display: flex; gap: 16px; justify-content: center; flex-wrap: wrap; animation: fadeUp 0.7s ease-out 0.3s both; }

        @keyframes fadeUp { from { opacity: 0; transform: translateY(28px); } to { opacity: 1; transform: translateY(0); } }

        /* ========== JOURNEY / HOW IT WORKS ========== */
        .journey { padding: 0; }
        .journey-step {
            padding: 120px 24px; position: relative; overflow: hidden;
        }
        .journey-step:nth-child(even) { background: var(--bg-alt); }
        .journey-step:nth-child(odd) { background: var(--bg); }
        .journey-step::before {
            content: ''; position: absolute; top: 0; left: 0; right: 0; height: 1px;
            background: linear-gradient(90deg, transparent, var(--border), transparent);
        }
        .journey-inner {
            max-width: 1100px; margin: 0 auto;
            display: grid; grid-template-columns: 1fr 1fr; gap: 80px; align-items: center;
        }
        .journey-step:nth-child(even) .journey-inner { direction: rtl; }
        .journey-step:nth-child(even) .journey-inner > * { direction: ltr; }
        .journey-content {}
        .journey-num {
            display: inline-flex; align-items: center; justify-content: center;
            width: 44px; height: 44px; border-radius: 12px; font-size: 1.1rem; font-weight: 800;
            background: linear-gradient(135deg, var(--brand), var(--brand-light));
            color: #fff; margin-bottom: 20px;
            box-shadow: 0 4px 16px rgba(79,70,229,0.25);
        }
        .journey-label {
            font-size: 0.72rem; text-transform: uppercase; letter-spacing: 0.14em;
            color: var(--brand); font-weight: 700; margin-bottom: 12px;
        }
        .journey-content h2 {
            font-size: clamp(1.8rem, 3vw, 2.4rem); font-weight: 800; color: var(--text);
            letter-spacing: -0.03em; line-height: 1.15; margin-bottom: 16px;
        }
        .journey-content p {
            font-size: 1.08rem; color: var(--text-mid); line-height: 1.75; font-weight: 300;
            max-width: 480px;
        }
        .journey-visual {
            display: flex; align-items: center; justify-content: center;
        }
        .journey-icon-box {
            width: 100%; aspect-ratio: 4/3; border-radius: 20px; position: relative;
            display: flex; align-items: center; justify-content: center;
            font-size: 5rem;
            background: linear-gradient(135deg, #f1f5f9, #e2e8f0);
            border: 1px solid var(--border);
        }
        .journey-step:nth-child(1) .journey-icon-box { background: linear-gradient(135deg, #ede9fe, #e0e7ff); }
        .journey-step:nth-child(2) .journey-icon-box { background: linear-gradient(135deg, #dbeafe, #e0e7ff); }
        .journey-step:nth-child(3) .journey-icon-box { background: linear-gradient(135deg, #d1fae5, #a7f3d0); }
        .journey-step:nth-child(4) .journey-icon-box { background: linear-gradient(135deg, #fef3c7, #fde68a); }
        .journey-step:nth-child(5) .journey-icon-box { background: linear-gradient(135deg, #fce7f3, #fbcfe8); }
        .journey-step:nth-child(6) .journey-icon-box { background: linear-gradient(135deg, #ccfbf1, #99f6e4); }

        /* Timeline connector */
        .journey-step .timeline-line {
            position: absolute; left: 50%; width: 2px; background: var(--border);
            top: 0; bottom: 0; transform: translateX(-50%); z-index: 0;
        }

        /* ========== SOCIAL PROOF ========== */
        .social-proof {
            background: var(--bg-dark); color: #fff; padding: 100px 24px; position: relative; overflow: hidden;
        }
        .social-proof::before {
            content: ''; position: absolute; inset: 0;
            background: radial-gradient(ellipse at 50% 0%, rgba(99,102,241,0.15), transparent 60%);
        }
        .social-proof .container { position: relative; z-index: 1; }
        .social-proof .section-label { color: var(--accent); text-align: center; font-size: 0.72rem; text-transform: uppercase; letter-spacing: 0.16em; font-weight: 700; margin-bottom: 14px; }
        .social-proof h2 {
            text-align: center; font-size: clamp(1.8rem, 3vw, 2.4rem); font-weight: 800;
            margin-bottom: 16px; letter-spacing: -0.025em;
        }
        .social-proof .section-sub {
            text-align: center; color: rgba(255,255,255,0.55); max-width: 500px;
            margin: 0 auto 64px; line-height: 1.7; font-size: 1.05rem; font-weight: 300;
        }
        .testimonial-grid {
            display: grid; grid-template-columns: repeat(3, 1fr); gap: 24px;
            max-width: 1000px; margin: 0 auto;
        }
        .testimonial-card {
            background: rgba(255,255,255,0.05); border-radius: 16px; padding: 32px 28px;
            border: 1px solid rgba(255,255,255,0.08); backdrop-filter: blur(4px);
            transition: all 0.3s;
        }
        .testimonial-card:hover { background: rgba(255,255,255,0.08); transform: translateY(-3px); }
        .testimonial-card .stars { font-size: 0.85rem; margin-bottom: 16px; letter-spacing: 2px; }
        .testimonial-card p { font-size: 0.95rem; color: rgba(255,255,255,0.75); line-height: 1.7; font-weight: 300; margin-bottom: 20px; }
        .testimonial-author { display: flex; align-items: center; gap: 12px; }
        .testimonial-avatar {
            width: 40px; height: 40px; border-radius: 10px;
            background: linear-gradient(135deg, var(--brand), var(--accent));
            display: flex; align-items: center; justify-content: center;
            font-size: 0.9rem; font-weight: 700; color: #fff;
        }
        .testimonial-name { font-size: 0.88rem; font-weight: 600; color: #fff; }
        .testimonial-role { font-size: 0.78rem; color: rgba(255,255,255,0.4); font-weight: 400; }

        /* ========== PRICING ========== */
        .pricing-section { background: var(--bg-alt); padding: 120px 24px; position: relative; }
        .pricing-section::before {
            content: ''; position: absolute; top: 0; left: 0; right: 0; height: 1px;
            background: linear-gradient(90deg, transparent, var(--border), transparent);
        }
        .section-label { text-align: center; font-size: 0.72rem; text-transform: uppercase; letter-spacing: 0.16em; color: var(--brand); font-weight: 700; margin-bottom: 14px; }
        .section-title { text-align: center; font-size: clamp(1.8rem, 3vw, 2.4rem); font-weight: 800; margin-bottom: 16px; color: var(--text); letter-spacing: -0.025em; line-height: 1.2; }
        .section-sub { text-align: center; color: var(--text-light); max-width: 560px; margin: 0 auto 64px; line-height: 1.7; font-size: 1.05rem; font-weight: 300; }
        .section-divider { width: 48px; height: 2px; margin: 0 auto 20px; background: linear-gradient(90deg, var(--brand), var(--accent)); border-radius: 2px; }

        .pricing-grid {
            display: grid; grid-template-columns: 1fr 1fr; gap: 28px;
            max-width: 820px; margin: 0 auto;
        }
        .pricing-card {
            background: var(--bg); border-radius: 16px; padding: 40px 32px;
            border: 1px solid var(--border); transition: all 0.3s cubic-bezier(0.4,0,0.2,1);
        }
        .pricing-card:hover { border-color: transparent; box-shadow: 0 12px 40px rgba(0,0,0,0.08); transform: translateY(-3px); }
        .pricing-phase { font-size: 0.72rem; text-transform: uppercase; letter-spacing: 0.1em; color: var(--brand); font-weight: 700; margin-bottom: 10px; }
        .pricing-card h3 { font-size: 1.25rem; margin-bottom: 10px; color: var(--text); font-weight: 700; }
        .pricing-card .pricing-desc { font-size: 0.9rem; color: var(--text-light); line-height: 1.7; margin-bottom: 22px; font-weight: 300; }
        .pricing-includes { list-style: none; padding: 0; }
        .pricing-includes li { font-size: 0.88rem; color: var(--text-mid); padding: 6px 0 6px 26px; position: relative; line-height: 1.55; font-weight: 400; }
        .pricing-includes li::before { content: '‚úì'; position: absolute; left: 0; color: var(--accent); font-weight: 700; font-size: 0.85rem; }
        .pricing-note { text-align: center; max-width: 640px; margin: 48px auto 0; color: var(--text-light); font-size: 0.92rem; line-height: 1.75; font-weight: 300; }

        /* ========== FINAL CTA ========== */
        .cta-section { padding: 100px 24px; background: var(--bg); }
        .cta {
            text-align: center;
            background: linear-gradient(160deg, var(--bg-dark) 0%, #1e1b4b 60%, var(--brand-dark) 100%);
            color: #fff; border-radius: 24px; max-width: 840px;
            margin: 0 auto; padding: 80px 48px; position: relative; overflow: hidden;
        }
        .cta::before {
            content: ''; position: absolute; inset: 0;
            background: radial-gradient(ellipse at 50% 100%, rgba(99,102,241,0.2) 0%, transparent 60%);
        }
        .cta > * { position: relative; }
        .cta h2 { font-size: clamp(1.8rem, 3.5vw, 2.6rem); margin-bottom: 16px; font-weight: 800; letter-spacing: -0.025em; }
        .cta p { opacity: 0.75; margin-bottom: 36px; font-size: 1.1rem; line-height: 1.7; max-width: 500px; margin-left: auto; margin-right: auto; font-weight: 300; }
        .cta-buttons { display: flex; gap: 14px; justify-content: center; flex-wrap: wrap; }

        /* ========== FOOTER ========== */
        .site-footer { background: var(--bg-dark); color: rgba(255,255,255,0.6); padding: 72px 24px 40px; }
        .footer-grid {
            display: grid; grid-template-columns: 2fr 1fr 1fr 1fr;
            gap: 48px; max-width: 1000px; margin: 0 auto 48px;
        }
        .footer-brand { font-size: 1.25rem; font-weight: 800; color: #fff; margin-bottom: 12px; }
        .footer-brand-desc { font-size: 0.88rem; line-height: 1.7; color: rgba(255,255,255,0.4); max-width: 280px; }
        .footer-col h4 { font-size: 0.72rem; text-transform: uppercase; letter-spacing: 0.14em; color: rgba(255,255,255,0.3); font-weight: 700; margin-bottom: 16px; }
        .footer-col a { display: block; font-size: 0.88rem; color: rgba(255,255,255,0.5); padding: 4px 0; transition: color 0.2s; }
        .footer-col a:hover { color: #fff; }
        .footer-bottom {
            text-align: center; padding-top: 32px;
            border-top: 1px solid rgba(255,255,255,0.08);
            font-size: 0.82rem; color: rgba(255,255,255,0.3);
            max-width: 1000px; margin: 0 auto;
        }

        /* Back to top */
        .back-to-top {
            position: fixed; bottom: 32px; right: 32px;
            width: 44px; height: 44px; border-radius: 12px;
            background: var(--brand); color: #fff;
            display: flex; align-items: center; justify-content: center;
            font-size: 1.2rem; cursor: pointer; border: none;
            box-shadow: 0 4px 16px rgba(79,70,229,0.3);
            opacity: 0; transform: translateY(12px);
            transition: all 0.3s; z-index: 90;
        }
        .back-to-top.show { opacity: 1; transform: translateY(0); }
        .back-to-top:hover { background: var(--brand-light); transform: translateY(-2px); }

        /* ========== RESPONSIVE ========== */
        @media (max-width: 768px) {
            .hero { padding: 120px 20px 70px; min-height: auto; }
            .hero h1 { font-size: clamp(2.2rem, 8vw, 3rem); }
            .hero-buttons { flex-direction: column; align-items: center; }
            .hero-video-wrap { margin-bottom: 36px; }
            .journey-step { padding: 80px 20px; }
            .journey-inner { grid-template-columns: 1fr; gap: 40px; }
            .journey-step:nth-child(even) .journey-inner { direction: ltr; }
            .journey-visual { order: -1; }
            .journey-icon-box { aspect-ratio: 16/9; font-size: 3.5rem; }
            .testimonial-grid { grid-template-columns: 1fr; }
            .pricing-grid { grid-template-columns: 1fr; }
            .cta { padding: 56px 24px; border-radius: 16px; }
            .footer-grid { grid-template-columns: 1fr 1fr; gap: 32px; }
            .back-to-top { bottom: 20px; right: 20px; width: 40px; height: 40px; }
        }
        @media (max-width: 480px) {
            .footer-grid { grid-template-columns: 1fr; gap: 24px; }
        }
    </style>
</head>

        .nav-links a.nav-text:hover { color: #667eea; }
        .btn {
            display: inline-block; padding: 10px 24px; border-radius: 8px;
            font-weight: 600; font-size: 0.9rem; transition: all 0.25s; cursor: pointer; border: none;
        }
        .btn-login {
            background: #10b981; color: #fff;
            box-shadow: 0 4px 14px rgba(16,185,129,0.3);
            font-size: 0.95rem; padding: 10px 28px;
        }
        .btn-login:hover { transform: translateY(-2px); box-shadow: 0 6px 20px rgba(16,185,129,0.4); background: #059669; }
        .btn-primary {
            background: linear-gradient(135deg, #667eea, #764ba2); color: #fff;
            box-shadow: 0 4px 14px rgba(102,126,234,0.4);
        }
        .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 6px 20px rgba(102,126,234,0.5); }
        .btn-outline {
            border: 2px solid #fff; color: #fff; background: transparent;
        }
        .btn-outline:hover { background: #fff; color: #667eea; }
        .btn-white {
            background: #fff; color: #667eea;
            box-shadow: 0 4px 14px rgba(0,0,0,0.15);
        }
        .btn-white:hover { transform: translateY(-2px); box-shadow: 0 6px 20px rgba(0,0,0,0.2); }

        /* Hero */
        .hero {
            min-height: 100vh; display: flex; align-items: center; justify-content: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 120px 40px 80px; text-align: center; color: #fff;
        }
        .hero h1 {
            font-size: 3.2rem; font-weight: 800; margin-bottom: 20px;
            animation: fadeUp 0.8s ease-out;
        }
        .hero p {
            font-size: 1.25rem; max-width: 640px; margin: 0 auto 36px;
            opacity: 0.92; line-height: 1.7;
            animation: fadeUp 0.8s ease-out 0.15s both;
        }
        .hero-buttons {
            display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;
            animation: fadeUp 0.8s ease-out 0.3s both;
        }

        /* Sections */
        section { padding: 100px 40px; }
        .section-title { text-align: center; font-size: 2rem; font-weight: 700; margin-bottom: 16px; color: #2d3748; }
        .section-sub { text-align: center; color: #718096; max-width: 600px; margin: 0 auto 60px; line-height: 1.6; }

        /* Services */
        .services-grid {
            display: grid; grid-template-columns: repeat(2, 1fr);
            gap: 32px; max-width: 1000px; margin: 0 auto;
        }
        .service-card {
            background: #fff; border-radius: 16px; padding: 36px 28px;
            box-shadow: 0 2px 16px rgba(0,0,0,0.06);
            transition: transform 0.25s, box-shadow 0.25s;
            border-top: 4px solid #667eea;
        }
        .service-card:hover { transform: translateY(-4px); box-shadow: 0 8px 30px rgba(0,0,0,0.1); }
        .service-icon { font-size: 2.4rem; margin-bottom: 16px; }
        .service-card h3 { font-size: 1.15rem; margin-bottom: 10px; color: #2d3748; }
        .service-card p { font-size: 0.95rem; color: #718096; line-height: 1.6; }

        /* How it works */
        .steps-bg { background: #f7f8fc; }
        .steps {
            display: flex; justify-content: center; gap: 24px; max-width: 1000px;
            margin: 0 auto; flex-wrap: wrap; align-items: flex-start;
        }
        .step { text-align: center; flex: 1; min-width: 200px; position: relative; padding: 0 12px; }
        .step-num {
            width: 56px; height: 56px; border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: #fff; font-size: 1.4rem; font-weight: 700;
            display: flex; align-items: center; justify-content: center;
            margin: 0 auto 18px;
        }
        .step h3 { font-size: 1.15rem; margin-bottom: 8px; color: #2d3748; }
        .step p { font-size: 0.9rem; color: #718096; line-height: 1.5; }
        .step-arrow {
            position: absolute; right: -18px; top: 18px;
            font-size: 1.5rem; color: #cbd5e0;
        }

        /* Features */
        .features-grid {
            display: grid; grid-template-columns: repeat(2, 1fr);
            gap: 32px; max-width: 1000px; margin: 0 auto;
        }
        .feature-card {
            background: #fff; border-radius: 16px; padding: 32px 24px;
            box-shadow: 0 2px 16px rgba(0,0,0,0.06);
            transition: transform 0.25s, box-shadow 0.25s;
        }

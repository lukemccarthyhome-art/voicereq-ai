        .feature-icon { font-size: 2rem; margin-bottom: 12px; }
        .feature-card h3 { font-size: 1.05rem; margin-bottom: 8px; color: #2d3748; }
        .feature-card p { font-size: 0.9rem; color: #718096; line-height: 1.6; }

        /* CTA */
        .cta-section { padding: 80px 40px; }
        .cta {
            text-align: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #fff; border-radius: 24px; max-width: 800px;
            margin: 0 auto; padding: 60px 40px;
        }
        .cta h2 { font-size: 2rem; margin-bottom: 16px; }
        .cta p { opacity: 0.9; margin-bottom: 32px; font-size: 1.05rem; line-height: 1.6; }

        /* Pricing */
        .pricing-bg { background: #f7f8fc; }
        .pricing-grid {
            display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 28px; max-width: 960px; margin: 0 auto;
        }
        .pricing-card {
            background: #fff; border-radius: 16px; padding: 36px 28px;
            box-shadow: 0 2px 16px rgba(0,0,0,0.06);
            transition: transform 0.25s, box-shadow 0.25s;
            position: relative; overflow: hidden;
        }
        .pricing-card:hover { transform: translateY(-4px); box-shadow: 0 8px 30px rgba(0,0,0,0.1); }
        .pricing-card.featured {
            border: 2px solid #667eea;
        }
        .pricing-card.featured::before {
            content: 'Most Popular'; position: absolute; top: 16px; right: -32px;
            background: linear-gradient(135deg, #667eea, #764ba2); color: #fff;
            font-size: 0.7rem; font-weight: 700; padding: 4px 40px;
            transform: rotate(45deg); text-transform: uppercase; letter-spacing: 0.5px;
        }
        .pricing-phase { font-size: 0.8rem; text-transform: uppercase; letter-spacing: 1px; color: #667eea; font-weight: 700; margin-bottom: 8px; }
        .pricing-card h3 { font-size: 1.3rem; margin-bottom: 8px; color: #2d3748; }
        .pricing-card .pricing-desc { font-size: 0.9rem; color: #718096; line-height: 1.6; margin-bottom: 20px; }
        .pricing-includes { list-style: none; padding: 0; }
        .pricing-includes li {
            font-size: 0.9rem; color: #4a5568; padding: 6px 0; padding-left: 24px;
            position: relative; line-height: 1.5;
        }
        .pricing-includes li::before {
            content: '‚úì'; position: absolute; left: 0; color: #10b981; font-weight: 700;
        }
        .pricing-note {
            text-align: center; max-width: 640px; margin: 40px auto 0;
            color: #718096; font-size: 0.95rem; line-height: 1.7;
        }
        .pricing-note strong { color: #4a5568; }

        /* Footer */
        footer {
            text-align: center; padding: 40px; color: #a0aec0; font-size: 0.85rem;
            border-top: 1px solid #e2e8f0;
        }
        footer a { color: #667eea; }

        /* Animations */
        @keyframes fadeUp {
            from { opacity: 0; transform: translateY(24px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Mobile */
        .hamburger { display: none; background: none; border: none; font-size: 1.5rem; cursor: pointer; padding: 4px 8px; color: #667eea; }

        @media (max-width: 768px) {
            nav { padding: 12px 20px; }
            .hamburger { display: block; }
            .nav-links {
                display: none; flex-direction: column; position: absolute;
                top: 100%; left: 0; right: 0; background: #fff;
                padding: 16px 20px; gap: 4px;
                box-shadow: 0 4px 16px rgba(0,0,0,0.1);
            }
            .nav-links.open { display: flex; }
            .nav-links a.nav-text { padding: 10px 0; font-size: 1rem; }
            .btn-login { text-align: center; margin-top: 8px; }
            .hero { padding: 100px 20px 60px; }
            .hero h1 { font-size: 2rem; }
            .hero p { font-size: 1rem; }
            .hero-buttons { flex-direction: column; align-items: center; }
            section { padding: 60px 20px; }
            .section-title { font-size: 1.6rem; }
            .step-arrow { display: none; }
            .steps { gap: 32px; }
            .steps .step { min-width: unset; }
            .services-grid, .features-grid, .pricing-grid { grid-template-columns: 1fr; }
            .pricing-note { font-size: 0.85rem; }
            .cta { padding: 40px 24px; }
            .cta h2 { font-size: 1.5rem; }
        }

        html { scroll-behavior: smooth; }
    </style>
</head>

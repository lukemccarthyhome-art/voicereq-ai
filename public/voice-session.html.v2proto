    function addDemoTranscript() {
        const panel = document.getElementById('transcriptPanel');
        panel.innerHTML = '';
        const msgs = [
            { role: 'ai', text: "Hi! I'm here to help gather your project requirements. Can you start by telling me what you're building?", time: '0:03' },
            { role: 'user', text: "We need a client portal for our construction company. Project managers need to track requirements and get approvals from contractors.", time: '0:12' },
            { role: 'ai', text: "Great ‚Äî a construction project portal. Who are the main user groups? You mentioned PMs and contractors ‚Äî anyone else?", time: '0:18' },
            { role: 'user', text: "Yeah, site supervisors too. They're on-site with tablets, often with patchy internet. And we use Procore already so it needs to integrate.", time: '0:31' },
            { role: 'ai', text: "Got it. So offline capability is important for the site workers. What kind of files do they typically share?", time: '0:38' },
            { role: 'user', text: "PDFs mainly, architectural drawings in DWG format, and photos from site. Some files can be pretty big, maybe 50 meg.", time: '0:52' },
        ];
        msgs.forEach(m => {
            const div = document.createElement('div');
            div.className = 't-msg ' + m.role;
            div.innerHTML = m.text + `<div class="t-time">${m.time}</div>`;
            panel.appendChild(div);
        });
    }

    function showToast() {
        const toast = document.getElementById('updatedToast');
        toast.classList.add('show');
        setTimeout(() => toast.classList.remove('show'), 2500);
    }

    // --- Session flow ---
    function saveAndExit() {
        // Save session state, then redirect to projects
        showToastMsg('üíæ Session saved. You can resume anytime.');
        setTimeout(() => {
            // In production: window.location.href = '/projects/' + projectId
            console.log('Would redirect to project page');
        }, 1500);
    }

    function showCompleteModal() {
        document.getElementById('completeModal').classList.add('visible');
    }
    function closeCompleteModal() {
        document.getElementById('completeModal').classList.remove('visible');
    }

    let selectedCompleteAction = 'complete';
    function selectCompleteOption(el) {
        document.querySelectorAll('.complete-option').forEach(o => o.classList.remove('selected'));
        el.classList.add('selected');
        selectedCompleteAction = el.dataset.action;
    }

    function confirmComplete() {
        closeCompleteModal();
        if (selectedCompleteAction === 'complete') {
            document.getElementById('sessionStatus').textContent = '‚úÖ Session completed';
            showToastMsg('‚úÖ Requirements finalised and saved');
        } else if (selectedCompleteAction === 'review') {
            document.getElementById('sessionStatus').textContent = 'üëÄ Submitted for review';
            showToastMsg('üëÄ Sent for review');
        } else {
            document.getElementById('sessionStatus').textContent = '‚è∏Ô∏è Session paused';
            showToastMsg('üíæ Saved ‚Äî pick up where you left off');
        }
    }

    function showToastMsg(msg) {
        const toast = document.getElementById('updatedToast');
        toast.textContent = msg;
        toast.classList.add('show');
        setTimeout(() => toast.classList.remove('show'), 2500);
    }

    // --- Stubs ---
    function sendText() {
        const input = document.getElementById('textInput');
        if (!input.value.trim()) return;
        // Add to transcript
        const panel = document.getElementById('transcriptPanel');
        const empty = panel.querySelector('.t-empty');
        if (empty) empty.remove();
        const div = document.createElement('div');
        div.className = 't-msg user';
        div.innerHTML = input.value;
        panel.appendChild(div);
        panel.scrollTop = panel.scrollHeight;
        input.value = '';
    }
    function handleFiles(files) {
        switchTab('files');
        const list = document.getElementById('fileList');
        for (const file of files) {
            const card = document.createElement('div');
            card.className = 'file-card';
            card.innerHTML = `
                <div class="file-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/></svg></div>
                <div class="file-info">
                    <div class="file-name">${file.name}</div>
                    <div class="file-meta">${(file.size / 1024).toFixed(1)} KB</div>
                </div>
                <div class="file-status analyzed">‚úì Analyzed</div>
                <button class="file-remove" onclick="this.parentElement.remove()"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" x2="6" y1="6" y2="18"/><line x1="6" x2="18" y1="6" y2="18"/></svg></button>
            `;
            list.appendChild(card);
        }
        const count = list.children.length;
        document.getElementById('fileCount').textContent = count > 0 ? `(${count})` : '';
    }
    function refreshRequirements() {
        const btn = document.getElementById('refreshBtn');
        btn.innerHTML = '<svg class="spin" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12a9 9 0 0 0-9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/><path d="M3 3v5h5"/><path d="M3 12a9 9 0 0 0 9 9 9.75 9.75 0 0 0 6.74-2.74L21 16"/><path d="M16 16h5v5"/></svg> Analyzing...';
        btn.disabled = true;
        setTimeout(() => {
            btn.innerHTML = '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12a9 9 0 0 0-9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/><path d="M3 3v5h5"/><path d="M3 12a9 9 0 0 0 9 9 9.75 9.75 0 0 0 6.74-2.74L21 16"/><path d="M16 16h5v5"/></svg> Refresh';
            btn.disabled = false;
            showToast();
        }, 2000);
    }
